---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import SocialPill from '../components/SocialPill.astro';
import GitHub from '../icons/GitHub.astro';
import Mail from '../icons/Mail.astro'
import Resume from '../icons/Resume.astro'
import StudiesIcon from '../icons/StudiesIcon.astro'
import Studies from '../components/Studies.astro'
import SectionContainer from '../components/SectionContainer.astro'
import StackIcon from '../icons/StackIcon.astro'
import Stack from '../components/Stack.astro'
import ExperienceIcon from '../icons/ExperienceIcon.astro'
import Experience from '../components/Experience.astro'
import ProjectsIcon from '../icons/ProjectsIcon.astro'
import Projects from '../components/Projects.astro'
---

<Layout
	title="Juan Manuel Castagno - Junior Full Stack Developer"
	description="Junior Full Stack Developer ready for new challenges">

	<main class="px-4 items-center mx-auto">
		<SectionContainer id="about-me" class="pt-44 pb-14">
			<div>
				<img 
				class="profile-picture size-18 rounded-full border-2 border-gray-300 mb-4 hover:scale-110 transition-transform duration-300 ease-in-out"
				src="../../profile.jpg" 
				title="Juan Manuel Castagno"/>
			</div>

			<div>
				<h1 class="tittle text-white lg:text-5xl text-3xl font-bold flex flex-row gap-x-4 pb-6">Hey, I'm Juan Manuel 
					<a href="https://www.linkedin.com/in/juan-manuel-castagno-3717a01b8/" 
					target="_blank"
					rel="noopener"
					class="badge flex justify-center items-center">
						<Badge>Looking for a job</Badge>
					</a>
				</h1>
				<h2 class="text-xl lg:text-2xl text-balance max-w-[700px]">
					<span>Junior Full Stack Developer</span>
					<span class="opacity-80"> allways ready to learn new things. Student of </span>
					<span class="text-blue-300/90">Information Systems Engineering</span>   
					<span class="opacity-80">at the</span>
					<span> National Technological University</span>
					<span class="opacity-80">, living in</span>
					<span class="text-blue-300/90">Argentina.</span>
				</h2>

				<nav class="flex gap-4 pt-6 flex-wrap">
					<SocialPill href="https://www.linkedin.com/in/juan-manuel-castagno-3717a01b8/">
						<LinkedIn class="size-4 lg:size-6 " />
						LinkedIn
					</SocialPill>
					<SocialPill href="https://github.com/jcastagno99">
						<GitHub class="size-4 lg:size-6 " />
						GitHub
					</SocialPill>
					<SocialPill href="">
						<Resume class="size-6" />
						Resume
					</SocialPill>
										<SocialPill href="mailto:juan-castagno@hotmail.com">
						<Mail class="size-4 lg:size-6 " />
						juan-castagno@hotmail.com
					</SocialPill>
				</nav>
			</div>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ExperienceIcon class="size-7" />
				Work Experience
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="studies">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<StudiesIcon class="size-7" />
				Studies
			</h2>
			<Studies />
		</SectionContainer>

		<SectionContainer id="stack">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<StackIcon class="size-7" />
				Technology Stack
			</h2>
			<Stack />
		</SectionContainer>

		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProjectsIcon class="size-7" />
				Projects
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>

<style>

	.profile-picture{
		width: 150px;
		height: 150px;
	}

	@media screen and (max-width: 700px){
		.tittle{
			display: block;
			padding-bottom: 10px;
		}

		.badge{
			width: fit-content;
			margin-top: 1rem;
		}
	}

</style>
